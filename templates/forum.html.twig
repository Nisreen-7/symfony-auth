{% extends 'base.html.twig' %}

{% block title %} Forum {% endblock %}

{% block body %}

<p class="mx-auto w-50 fs-4 ">Bonjour : <span class="text-warning">{{app.User.email}}</span> bienvenue dans notre forum
</p>
<div class="card mx-auto w-50 mt-5">
    <div class="card-body">
        <form method="post">
            <h3 class="card-title text-success text-center "> Bienvenue dans notre Forum </h3>
            {% for item in message %}
            <p> <span class="text-info fst-italic"> {{item.user.email}}</span> :{{item.content}}
                {% if app.user and app.user.id == item.user.id %}
                <a href="/delete-message/{{item.id}}" class="btn btn-danger">Delete</a>
                {% else %}
                <a href="/repondre-message/{{item.id}}" class="btn btn-danger">Reply</a>
                {% endif %}
            </p>
            {% endfor %}
        </form>
    </div>
</div>


<div class="card mx-auto w-50 mt-5">
    <div class="card-body">
        <form method="post">
            <h3 class="card-title">Laissez votre message</h3>

            <label for="content">Content</label>
            <textarea name="content" id="" cols="15" rows="5" class="form-control"></textarea>

            <button class="btn btn-primary mt-3">Add Message</button>
        </form>
    </div>
</div>
{% endblock %}