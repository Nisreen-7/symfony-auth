{% extends 'base.html.twig' %}

{% block title %} Message list {% endblock %}

{% block body %}
<div class="card mx-auto w-50 mt-5">
    <div class="card-body">
        <form method="post">
            <h3 class="card-title text-success text-center fs-4"> Bienvenue dans notre Forum </h3>
            {% for item in message %}
            <p> <span class="text-info fst-italic"> {{item.user.email}}</span> :{{item.content}}

                {% if app.user and app.user.id == item.user.id %}
                <a href="/delete-message/{{item.id}}" class="btn btn-danger">Delete</a>

                {% endif %}

            </p>
            {% endfor %}

        </form>
    </div>
</div>

{% endblock %}