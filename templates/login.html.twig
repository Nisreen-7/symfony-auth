{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block body %}

<div class="card mx-auto w-50 mt-5">
    <div class="card-body">
        <form method="post">
            <h3 class="card-title text-primary">LogIn</h3>

            {% if error %}
            <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label for="email">Email:</label>
            <input type="text" id="email" name="_username" value="{{ lastEmail }}" class="form-control">

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" class="form-control">


            {# <input type="hidden" name="_target_path" value="/protected" class="form-control"> #}
            <button type="submit" class="btn btn-info mt-3">Login</button>
        </form>
        <label for="pasdecompte">N'avez-vous pas encore de compte chez nous ?</label>

        <a href="/register" class="btn btn-info">Cr√©er Un Compte</a>
    </div>
</div>
{% endblock body %}